generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  name       String?
  email      String   @unique
  password   String?
  googleId   String?  @unique
  created_at DateTime @default(now())
  Book       Book[]
}

model Book {
  id            String   @id @default(uuid())
  title         String
  author        String
  total_pages   Int
  pages_per_day Int
  pages_read    Int      @default(0)
  start_date    DateTime
  end_date      DateTime
  created_at    DateTime @default(now())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
}
